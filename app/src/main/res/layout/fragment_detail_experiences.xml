<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailExperiencesFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDetailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/txt_imageview"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16dp"
            android:maxLines="1"
            android:text="@string/greg_paul"
            android:textColor="@color/black"
            android:textSize="@dimen/_24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvContentDetailExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16dp"
            android:text="Detail Experience"
            android:textColor="@color/black"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>