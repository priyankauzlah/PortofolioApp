<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navHeader"
    style="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/ivNavHeaderTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/txt_imageview"
        android:fitsSystemWindows="true"
        android:src="@drawable/navheader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/profile_header"
        android:id="@+id/ivProfileHeader"
        android:contentDescription="@string/txt_imageview"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/greg_paul"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivProfileHeader"
        app:layout_constraintStart_toEndOf="@id/ivProfileHeader"
        app:layout_constraintTop_toTopOf="@id/ivProfileHeader"
        app:layout_constraintVertical_bias="0.73"
        android:id="@+id/tvNameHeader"/>



</androidx.constraintlayout.widget.ConstraintLayout>